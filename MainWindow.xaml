<Window x:Class="ifExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ifExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" FontSize="36">
    <ScrollViewer>
    <StackPanel>
        <Button x:Name="btnRun" Click="btnRun_Click" 
                Background="BlanchedAlmond">Click to run</Button>
        <Label x:Name="lblOutput"></Label>
    </StackPanel>
    </ScrollViewer>
</Window>
